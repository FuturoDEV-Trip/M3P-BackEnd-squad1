{
  "swagger": "2.0",
  "info": {
    "title": "Viagem365",
    "description": "Description",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authorization",
      "description": "Token de Autenticação"
    }
  },
  "paths": {
    "/login/": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Login",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "catarina_costa@lins.net.br"
                },
                "password": {
                  "type": "string",
                  "example": "12345"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/usuarios/": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "description": "Cadastra novo usuário, validação de duplicidade de email e cpf, busca endereço a partir do CEP informado.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Cadastra novo usuário.",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Catarina Márcia Costa"
                },
                "sexo": {
                  "type": "string",
                  "example": "Feminino"
                },
                "cpf": {
                  "type": "string",
                  "example": "25942677085"
                },
                "data_nascimento": {
                  "type": "string",
                  "example": "1980-03-03"
                },
                "email": {
                  "type": "string",
                  "example": "catarina_costa@lins.net.br"
                },
                "password": {
                  "type": "string",
                  "example": "12345"
                },
                "cep": {
                  "type": "string",
                  "example": "91160040"
                },
                "numero": {
                  "type": "string",
                  "example": "700"
                }
              },
              "required": [
                "nome",
                "sexo",
                "cpf",
                "data_nascimento",
                "email",
                "password",
                "cep",
                "numero"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/usuarios/{id}": {
      "get": {
        "tags": [
          "Usuario"
        ],
        "description": "Lista dados do usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Usuario"
        ],
        "description": "Atualiza dados do usuário autenticado.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Atualiza usuário",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Gabrielly Catarina Márcia Costa"
                },
                "sexo": {
                  "type": "string",
                  "example": "Feminino"
                },
                "data_nascimento": {
                  "type": "string",
                  "example": "1980-03-03"
                },
                "cep": {
                  "type": "string",
                  "example": "69307540"
                },
                "endereco": {
                  "type": "string",
                  "example": "Rua da Tamarineira"
                },
                "numero": {
                  "type": "string",
                  "example": "786"
                },
                "bairro": {
                  "type": "string",
                  "example": "Caçari"
                },
                "cidade": {
                  "type": "string",
                  "example": "Boa Vista"
                },
                "estado": {
                  "type": "string",
                  "example": "Roraima"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Usuario"
        ],
        "description": "Exclui usuário autenticado, desde que não tenha locais cadastrados",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/destinos/": {
      "post": {
        "tags": [
          "Destino"
        ],
        "description": "Cadastra novo local, buscando a cidade e o estado pelas coordenadas informadas, pelo usuário autenticado",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Cadastra novo local",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Praia da Armação"
                },
                "descricao": {
                  "type": "string",
                  "example": "Praia extensa com restaurantes de frutos do mar e ideal para passear de barco, nadar e fazer caminhadas pela encosta."
                },
                "coordenadas_geo": {
                  "type": "string",
                  "example": "-27.7442822,-48.5182281"
                }
              },
              "required": [
                "nome",
                "descricao",
                "coordenadas_geo"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Destino"
        ],
        "description": "Lista todos os locais cadastrados pelo usuário autenticado",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/destinos/{id}": {
      "get": {
        "tags": [
          "Destino"
        ],
        "description": "Lista local específico cadastrado pelo usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Destino"
        ],
        "description": "Atualiza dados do local cadastrado pelo usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Atualiza local",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Praia da Armação"
                },
                "descricao": {
                  "type": "string",
                  "example": "Praia extensa com restaurantes de frutos do mar e ideal para passear de barco, nadar e fazer caminhadas pela encosta."
                },
                "coordenadas_geo": {
                  "type": "string",
                  "example": "-27.7442822,-48.5182281"
                },
                "cep": {
                  "type": "string",
                  "example": "88066260"
                },
                "cidade": {
                  "type": "string",
                  "example": "Florianópolis"
                },
                "estado": {
                  "type": "string",
                  "example": "Santa Catarina"
                },
                "pais": {
                  "type": "string",
                  "example": "Brasil"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Destino"
        ],
        "description": "Exclui local cadastrado pelo usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/home/": {
      "get": {
        "tags": [
          "Home"
        ],
        "description": "Retorna o número de usuários que estão ativos (status = true).",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/home/{id}": {
      "put": {
        "tags": [
          "Home"
        ],
        "description": "Desativa o status de um usuário ao realizar o logout.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/home/listarDestinos": {
      "get": {
        "tags": [
          "Home"
        ],
        "description": "Retorna uma lista de todos os destinos disponíveis.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/home/totalDestinos": {
      "get": {
        "tags": [
          "Home"
        ],
        "description": "Retorna a contagem total de destinos no sistema.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ]
}